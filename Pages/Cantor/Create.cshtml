@page
@model PalcoLivre.Pages.Cantor.CreateModel
@{
    ViewData["Title"] = "Criar Cantor";
}

<h2>Criar Cantor</h2>

<form method="post" id="cantorForm">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Telefone" class="form-label"></label>
        <input asp-for="Telefone" class="form-control" />
        <span asp-validation-for="Telefone" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary" id="submitBtn">Salvar</button>
    <button type="button" class="btn btn-secondary" id="novoBtn">Novo</button>
</form>

@if (TempData["ShowConfirmation"] as string == "true")
{
    <script>
        window.addEventListener('DOMContentLoaded', function() {
            window.showConfirmationModal('The record was saved successfully!');
        });
    </script>
}

<hr />
<h3>Cantores Cadastrados</h3>
<button class="btn btn-secondary mb-3" onclick="location.reload()">Refresh</button>
<table class="table table-striped table-bordered" id="cantoresTable">
    <thead class="table-primary">
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Telefone</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var cantor in Model.Cantores)
    {
        <tr class="cantor-row" data-id="@cantor.Id" data-nome="@cantor.Nome" data-telefone="@cantor.Telefone">
            <td>@cantor.Id</td>
            <td>@cantor.Nome</td>
            <td>@cantor.Telefone</td>
        </tr>
    }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <style>
        .cantor-row:hover {
            background-color: #e3f2fd !important;
            cursor: pointer;
        }
        .cantor-row.selected {
            background-color: #90caf9 !important;
        }
    </style>
    <script>
        document.querySelectorAll('.cantor-row').forEach(function(row) {
            row.addEventListener('click', function() {
                document.querySelector('[name="Id"]').value = row.getAttribute('data-id');
                document.querySelector('[name="Nome"]').value = row.getAttribute('data-nome');
                document.querySelector('[name="Telefone"]').value = row.getAttribute('data-telefone');
                document.getElementById('submitBtn').textContent = 'Alterar';
                document.querySelectorAll('.cantor-row').forEach(function(r) {
                    r.classList.remove('selected');
                });
                row.classList.add('selected');
            });
        });
        document.getElementById('novoBtn').addEventListener('click', function() {
            document.querySelector('[name="Id"]').value = '0';
            document.querySelector('[name="Nome"]').value = '';
            document.querySelector('[name="Telefone"]').value = '';
            document.getElementById('submitBtn').textContent = 'Salvar';
            document.querySelectorAll('.cantor-row').forEach(function(r) {
                r.classList.remove('selected');
            });
        });
    </script>
}