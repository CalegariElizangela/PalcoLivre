@page
@model PalcoLivre.Pages.Cliente.CreateModel
@{
    ViewData["Title"] = "Criar Cliente";
}

<h2>Criar Cliente</h2>

<form method="post" id="clienteForm">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary" id="submitBtn">Salvar</button>
    <button type="button" class="btn btn-secondary" id="novoBtn">Novo</button>
</form>

@if (TempData["ShowConfirmation"] as string == "true")
{
    <script>
        window.addEventListener('DOMContentLoaded', function() {
            window.showConfirmationModal('The record was saved successfully!');
        });
    </script>
}

<hr />
<h3>Clientes Cadastrados</h3>
<button class="btn btn-secondary mb-3" onclick="location.reload()">Refresh</button>
<table class="table table-striped table-bordered" id="clientesTable">
    <thead class="table-primary">
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var cliente in Model.Clientes)
    {
        <tr class="cliente-row" data-id="@cliente.Id" data-nome="@cliente.Nome" data-email="@cliente.Email">
            <td>@cliente.Id</td>
            <td>@cliente.Nome</td>
            <td>@cliente.Email</td>
        </tr>
    }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <style>
        .cliente-row:hover {
            background-color: #e3f2fd !important;
            cursor: pointer;
        }
        .cliente-row.selected {
            background-color: #90caf9 !important;
        }
    </style>
    <script>
        document.querySelectorAll('.cliente-row').forEach(function(row) {
            row.addEventListener('click', function() {
                document.querySelector('[name="Id"]').value = row.getAttribute('data-id');
                document.querySelector('[name="Nome"]').value = row.getAttribute('data-nome');
                document.querySelector('[name="Email"]').value = row.getAttribute('data-email');
                document.getElementById('submitBtn').textContent = 'Alterar';
                document.querySelectorAll('.cliente-row').forEach(function(r) {
                    r.classList.remove('selected');
                });
                row.classList.add('selected');
            });
        });
        document.getElementById('novoBtn').addEventListener('click', function() {
            document.querySelector('[name="Id"]').value = '0';
            document.querySelector('[name="Nome"]').value = '';
            document.querySelector('[name="Email"]').value = '';
            document.getElementById('submitBtn').textContent = 'Salvar';
            document.querySelectorAll('.cliente-row').forEach(function(r) {
                r.classList.remove('selected');
            });
        });
    </script>
}