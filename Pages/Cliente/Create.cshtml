@page
@model PalcoLivre.Pages.Cliente.CreateModel
@{
    ViewData["Title"] = "Create Cliente";
}

<h2>Create Cliente</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

@if (TempData["ShowConfirmation"] as string == "true")
{
    <script>
        window.addEventListener('DOMContentLoaded', function() {
            window.showConfirmationModal('The record was saved successfully!');
        });
    </script>
}

<hr />
<h3>Clientes Cadastrados</h3>
<button class="btn btn-secondary mb-3" onclick="location.reload()">Refresh</button>
<table class="table table-striped table-bordered">
    <thead class="table-primary">
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var cliente in Model.Clientes)
    {
        <tr>
            <td>@cliente.Id</td>
            <td>@cliente.Nome</td>
            <td>@cliente.Email</td>
        </tr>
    }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}